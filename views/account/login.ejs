<%# Content Heading %>
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().filter(error => error.msg !== "Invalid value").forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div>
    <form action="/account/login" method="post" >
      <fieldset>
        <label for="accountEmail">Email:</label>
        <input type="email" id="accountEmail" name="account_email" value="<%= locals.account_email %>" required>
        <label for="accountPassword">Password:</label>
        <input type="password" id="accountPassword" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        <input type="submit" value="LOGIN">
      </fieldset>
    </form>
    <p>No account? <a href="/account/register">Sign-up</a></p>
</div>
<script src="/js/script.js"></script>